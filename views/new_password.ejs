<%- include ('partials/header') %> 
<body class="m-5">
    <div class="container border m-auto w-25">
        <div class="row mt-5">
            <div class="col">
                <h3 class="text-center text-uppercase">New Password</h3>
                <%- include ('partials/error_msg') %> 
                <form action="/member/new_password" method="POST" class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" class="form-control" value="<%=member[0].username%>" required readonly><br/>
                    <input type="password" name="password" class="form-control" placeholder="Enter New Password" required><br/>
                    <hr class="w-50">
                    <button class="btn btn-primary w-100 text-uppercase" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
<%- include ('partials/footer') %> 