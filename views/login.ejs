<%- include ('partials/header') %> 
<body class="m-5">
    <div class="container border m-auto w-25">
        <div class="row mt-5">
            <div class="col">
                <h2 class="text-center text-uppercase">login</h2>
                <%- include ('partials/error_msg') %> 
                <form action="/member/login" method="POST" class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="E-Mail" required><br/>
                    <input type="password" name="password" class="form-control" placeholder="Password" required><br/>
                    <button class="btn btn-success w-100 text-uppercase" type="submit">Login</button>
                </form>
                <hr class="w-50">
                <p>Forget Password? <a href="/member/reset_password" class="card-link">Reset password</a></p>
                <p>Not registered? <a href="/member/register" class="card-link">Sign up now</a></p>
            </div>
        </div>
    </div>
<%- include ('partials/footer') %> 